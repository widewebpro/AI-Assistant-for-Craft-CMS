{% extends "_layouts/cp" %}
{% set selectedSubnavItem = "settings" %}

{% set settingsTabs = {
    'general': { label: 'General', url: cpUrl('ai-agent/settings') },
    'appearance': { label: 'Appearance', url: cpUrl('ai-agent/settings/appearance') },
    'knowledge-base': { label: 'Knowledge Base', url: cpUrl('ai-agent/settings/knowledge-base') },
    'pages': { label: 'Pages', url: cpUrl('ai-agent/settings/pages') },
    'restrictions': { label: 'Restrictions', url: cpUrl('ai-agent/settings/restrictions') },
} %}

{% block content %}
<nav style="display: flex; gap: 4px; margin-bottom: 24px; border-bottom: 1px solid #e5e7eb; padding-bottom: 0;">
    {% for key, tab in settingsTabs %}
        <a href="{{ tab.url }}"
           style="padding: 10px 16px; font-size: 14px; font-weight: 500; text-decoration: none; border-bottom: 2px solid {{ settingsTab == key ? '#2563eb' : 'transparent' }}; color: {{ settingsTab == key ? '#2563eb' : '#6b7280' }}; margin-bottom: -1px; transition: color 0.15s, border-color 0.15s;"
        >{{ tab.label }}</a>
    {% endfor %}
</nav>

{% block settingsContent %}{% endblock %}
{% endblock %}
